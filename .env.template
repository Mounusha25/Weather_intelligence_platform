# Environment Configuration Template
# Copy this to .env and fill in your actual values

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Weather API Configuration
WEATHER_API_KEY=your_openweather_api_key_here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret

# Deployment Environment
ENVIRONMENT=dev  # Options: dev, staging, prod
AZURE_REGION=eastus2
AZURE_CLIENT_SECRET=your_client_secret_here

# Event Hub Configuration
EVENT_HUB_CONNECTION_STRING=Endpoint=sb://your-namespace.servicebus.windows.net/;SharedAccessKeyName=RootManageSharedAccessKey;SharedAccessKey=your_key_here
EVENT_HUB_NAME=weather-telemetry
EVENT_HUB_CONSUMER_GROUP=$Default
EVENT_HUB_PARTITION_COUNT=4

# Kusto (Azure Data Explorer) Configuration
KUSTO_CLUSTER_URI=https://your-cluster.westus2.kusto.windows.net
KUSTO_DATABASE_NAME=WeatherIntelligence
KUSTO_TABLE_NAME=WeatherTelemetry
KUSTO_INGESTION_MAPPING=weather_mapping

# Databricks Configuration
DATABRICKS_WORKSPACE_URL=https://your-workspace.azuredatabricks.net
DATABRICKS_ACCESS_TOKEN=your_databricks_token_here
DATABRICKS_CLUSTER_ID=your_cluster_id_here
DATABRICKS_NOTEBOOK_PATH=/weather-intelligence

# Power BI Configuration
POWERBI_WORKSPACE_ID=your_workspace_id_here
POWERBI_DATASET_ID=your_dataset_id_here
POWERBI_REPORT_ID=your_report_id_here
POWERBI_APP_ID=your_app_id_here
POWERBI_APP_SECRET=your_app_secret_here

# Machine Learning Configuration
ML_MODEL_REGISTRY_PATH=models/
XGBOOST_N_ESTIMATORS=100
XGBOOST_MAX_DEPTH=6
XGBOOST_LEARNING_RATE=0.1
TRAINING_WINDOW_HOURS=168
PREDICTION_HORIZON_MINUTES=360
RETRAIN_INTERVAL_HOURS=24
SEVERE_WEATHER_THRESHOLD=0.7
ALERT_LEAD_TIME_MINUTES=18

# Alerting Configuration
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alert
EMAIL_SMTP_SERVER=smtp.office365.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@company.com
EMAIL_PASSWORD=your_email_password_here
ESCALATION_DELAY_MINUTES=15
MAX_ESCALATION_LEVEL=3

# Monitoring Configuration
APPLICATION_INSIGHTS_KEY=your_application_insights_key_here
LOG_LEVEL=INFO
METRICS_PORT=8000
DASHBOARD_P95_THRESHOLD_MS=700
DATA_FRESHNESS_THRESHOLD_SECONDS=60
HEALTH_CHECK_INTERVAL_SECONDS=30

# Testing Configuration
CUPED_PRE_EXPERIMENT_DAYS=7
STATISTICAL_POWER=0.9
MINIMUM_DETECTABLE_EFFECT=0.03
TEST_DURATION_DAYS=14
BACKTEST_START_DATE=2023-01-01
BACKTEST_END_DATE=2024-01-01
CROSS_VALIDATION_FOLDS=5

# Weather API Configuration
WEATHER_API_KEY=your_openweather_api_key_here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5
WEATHER_COLLECTION_INTERVAL_MINUTES=5
WEATHER_BATCH_SIZE=100